;
; DriverHookTest.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=Sample ; TODO: edit Class
ClassGuid={78A1C341-4539-11d3-B88D-00C04FAD5171} ; TODO: edit ClassGuid
Provider=%ManufacturerName%
CatalogFile=DriverHookTest.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages

[DestinationDirs]
DefaultDestDir = 12
DriverHookTest_Device_CoInstaller_CopyFiles = 11

; ================= Class section =====================

[ClassInstall32]
Addreg=SampleClassReg

[SampleClassReg]
HKR,,,0,%ClassName%
HKR,,Icon,,-5

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
DriverHookTest.sys  = 1,,
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%DriverHookTest.DeviceDesc%=DriverHookTest_Device, Root\DriverHookTest ; TODO: edit hw-id

[DriverHookTest_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
DriverHookTest.sys

;-------------- Service installation
[DriverHookTest_Device.NT.Services]
AddService = DriverHookTest,%SPSVCINST_ASSOCSERVICE%, DriverHookTest_Service_Inst

; -------------- DriverHookTest driver install sections
[DriverHookTest_Service_Inst]
DisplayName    = %DriverHookTest.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\DriverHookTest.sys

;
;--- DriverHookTest_Device Coinstaller installation ------
;

[DriverHookTest_Device.NT.CoInstallers]
AddReg=DriverHookTest_Device_CoInstaller_AddReg
CopyFiles=DriverHookTest_Device_CoInstaller_CopyFiles

[DriverHookTest_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[DriverHookTest_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[DriverHookTest_Device.NT.Wdf]
KmdfService =  DriverHookTest, DriverHookTest_wdfsect
[DriverHookTest_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
ClassName="Samples" ; TODO: edit ClassName
DiskName = "DriverHookTest Installation Disk"
DriverHookTest.DeviceDesc = "DriverHookTest Device"
DriverHookTest.SVCDESC = "DriverHookTest Service"
